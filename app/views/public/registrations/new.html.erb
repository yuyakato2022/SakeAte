<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5 text-center">
      <h2><strong>新規登録</strong></h2>
      <%= render 'layouts/errors', obj: @user %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 mt-2 mb-3 text-center">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="field">
          <label><%= f.label :name %></label><br>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :password,"パスワード（６文字以上）" %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation,"パスワードの確認" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="actions mt-3 mb-3">
          <%= f.submit "登録" %>
        </div>
      <% end %>

      <%= render "public/shared/links" %>
    </div>
  </div>
</div>