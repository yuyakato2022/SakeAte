<div class="container">
  <!--タイトル表示（お酒or新着orランキングorすべて）-->
  <div class="row">
    <div class="col-lg-12 mt-5 mb-3 text-center">
      <h2>
        <% if @alcohol.present? %>
          <%= @alcohol.name %>に合うおすすめレシピ
        <% elsif params[:latest].present? %>
          すべてのレシピ＜新着順＞
        <% elsif params[:star_count].present? %>
          すべてのレシピ＜ランキング順＞
        <% else %>
          すべてのレシピ
        <% end %>
      </h2>
    </div>
  </div>
  <!--タグ検索＋レシピ部分検索＋並び替え-->
  <div class="row">
    <div class="col-lg-6">
      <h4>お酒の種類</h4>
      <%= render "public/recipes/recipe_genre", alcohols: @alcohols %>
    </div>
    <div class="col-lg-6 text-right">
      <%= render "public/searches/form", q: @q %>
      <%= link_to '新しい順', public_recipes_path(latest: "true"), class: "btn btn-outline-danger" %>
      <%= link_to 'ランキング順', public_recipes_path(star_count: "true"), class: "btn btn-outline-warning" %>
    </div>
  </div>
  <!--レシピ一覧-->
  <%= render "public/recipes/index", recipes: @recipes %>
  <!--ページネーション-->
  <div class="row">
    <div class="col-lg-12 mt-5 mb-3">
      <%= paginate @recipes %>
    </div>
  </div>

</div>