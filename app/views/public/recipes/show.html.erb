<!--レシピ詳細-->
<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5 mb-1 p-2 text-center">
      <h2>
        <strong><%= @recipe.name %></strong>
        <span id= "bookmarks_<%= @recipe.id %>" >
          <%= render "public/bookmarks/bookmark", recipe: @recipe %>
        </span>
      </h2>
      <strong>合うお酒</strong>
      <% @recipe.alcohols.each do |alcohol| %>
        /<%= safe_join(alcohol.name.split("\n"),tag(:br)) %>
      <% end %>
    </div>
  </div>
<!--コメント＋食材＋手順-->
  <%= render "admin_user/recipes/show", recipe: @recipe %>
<!--ユーザーコメントフォーム-->
  <div class="row mx-auto mt-5">
    <div class="col-lg-4">
      <%= render "public/reviews/form", recipe: @recipe, review: @review %>
    </div>
<!--ユーザーコメント一覧-->
    <div class="col-lg-8">
      <%= render "public/reviews/review", recipe: @recipe %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12 m-3 text-center">
      <%= link_to public_recipes_path, class: 'text-link' do %>
        <strong><i class="fas fa-chevron-circle-left"></i>一覧ページに戻る<i class="fas fa-chevron-circle-left"></i></strong>
      <% end %>
    </div>
  </div>
</div>