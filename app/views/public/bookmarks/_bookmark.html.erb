<% if recipe.bookmarked_by?(current_user) %>
  <%= link_to public_recipe_bookmarks_path(recipe), method: :delete, remote: true do %>
    <i class="fas fa-bookmark text-warning"></i>
  <% end %>
<% else %>
  <%= link_to public_recipe_bookmarks_path(recipe), method: :post, remote: true do %>
    <i class="far fa-bookmark text-warning"></i>
  <% end %>
<% end %>
