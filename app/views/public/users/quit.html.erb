<div class="container">
  <!--タイトル-->
  <div class="row">
    <div class="col-lg-12 mt-5 text-center">
      <h2>退会ページ</h2>
    </div>
  </div>
  <!--退会ボタン-->
  <div class="row">
    <div class="col-lg-12 mt-5 mb-5 text-center">
      <%= link_to "退会しない", public_user_path, class: 'btn btn-sm btn-success btn-lg mr-4' %>
      <%= link_to "退会する", public_users_withdraw_path, method: :patch, data: {confirm: "本当に退会しますか？"}, class: 'btn btn-sm btn-danger btn-lg' %>
    </div>
  </div>
  <!--戻るボタン-->
  <div class="row">
    <div class="col-lg-12 m-3 text-center">
      <%= link_to public_user_path, class: 'text-link' do %>
        <strong><i class="fas fa-chevron-circle-left"></i>マイページに戻る<i class="fas fa-chevron-circle-left"></i></strong>
      <% end %>
    </div>
  </div>

</div>