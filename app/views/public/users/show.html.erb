<h3>MY PAGE</h3>
<%= image_tag @user.get_profile_image(90,70) %>
<p><strong><%= @user.name %>様のお気に入り一覧</strong></p>


<% if @bookmark_list.present? %>
  <% @bookmark_list.each do |recipe| %>
    <%= link_to public_recipe_path(recipe.id) do %>
      <%= image_tag recipe.get_image(200,200) %>
      レシピ名： <%= recipe.name %>
    <% end %>
      レシピコメント: <%= recipe.explanation %>
      <div id= "bookmarks_<%= recipe.id %>" >
        <%= render "public/bookmarks/bookmark", recipe: recipe %>
        お気に入り数：<%= recipe.bookmarks.count %>
      </div>
  <% end %>
<% end %>


<p><%= link_to '編集ページ', edit_public_user_path %></p>
