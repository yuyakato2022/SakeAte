<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5 text-center">
      <h2><strong>編集ページ</strong></h2>
      <%= render 'layouts/errors', obj: @user %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 mt-2 mb-3 text-center">
      <%= form_with model: @user, url: public_user_path, method: :patch do |f| %>
        <%= f.label :profile_image,"プロフィール画像" %>
        <p><%= f.file_field :profile_image, accept: "image/*" %></p>
        <%= f.label :name,"名前" %>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.label :email,"email" %>
        <%= f.text_field :email, class: 'form-control' %>
        <p><%= f.submit "変更を保存" %></p>
      <% end %>
      <%= link_to public_users_quit_path, class: 'text-dark' do %>
        退会ページへ
      <% end %>
    </div>
  </div>
</div>



