<!--レシピ画像-->
<div class="row">
  <div class="col-lg-12 mb-3 text-center">
    <p><strong><%= f.label :image, "レシピ画像" %></strong></p>
    <%= f.file_field :image, class: "col-4",  accept: "image/*" %>
  </div>
</div>
<!--レシピタイトルフォーム-->
<div class="row">
  <div class="col-lg-12 mb-3 text-center">
    <p><strong><%= f.label :name,"レシピ名"%></strong></p>
    <%= f.text_field :name, class: "col-lg-6" %>
  </div>
</div>
<!--タグ付け-->
<div class="row">
  <div class="col-lg-12 mb-3 text-center">
    <p><strong><%= f.label :name,"お酒" %></strong></p>
    <%= f.collection_check_boxes(:alcohol_ids, Alcohol.all, :id, :name, include_hidden: false ) %>
  </div>
</div>
<!--レシピコメントフォーム-->
<div class="row">
  <div class="col-lg-12 mb-3 text-center">
    <p><strong><%= f.label :explanation, "レシピコメント" %></strong></p>
    <%= f.text_area :explanation, size: "70x5" %>
  </div>
</div>
<!--食材と調理法フォーム-->
<div class="row">
  <div class="col-lg-6 mb-3 text-center">
    <p><strong><%= f.label :ingredient, "食材" %></strong></p>
    <%= f.text_area :ingredient, size: "70x15" %>
  </div>
  <div class="col-lg-6 mb-3 text-center">
    <p><strong><%= f.label :procedure, "調理手順" %></strong></p>
    <%= f.text_area :procedure, size: "70x15" %>
  </div>
</div>
<!--登録ボタン-->
<div class="row">
  <div class="col-12 mb-3 text-center">
    <%= f.submit '登録' %>
  </div>
</div>