<!--レシピ写真-->
<div class="row">
  <div class="col-lg-12 mb-3 text-center">
    <%= image_tag recipe.get_image(400,400),class: "image-show" %>
  </div>
</div>
<!--レシピコメント-->
<div class="row">
  <div class="col-lg-12 text-center">
    <p class="comment-show"><%= recipe.explanation %></p>
  </div>
</div>
<!--食材と調理法-->
<div class="row mx-auto">
  <div class="col-lg-6">
    <p class="text-bg">
      <strong>食材</strong></br>
      <span class="text">
        <%= safe_join(recipe.ingredient.split("\n"),tag(:br)) %>
      </span>
    </p>
  </div>
  <div class="col-lg-6">
    <p class="text-bg">
      <strong>作り方</strong></br>
      <span class="text">
        <%= safe_join(recipe.procedure.split("\n"),tag(:br)) %>
      </span>
    </p>
  </div>
</div>