<div class="container">
  <div class="row">
    <div class="col-lg-6 mt-3 mb-3 text-center">
      <%= link_to new_admin_user_recipe_path,class: 'text-dark' do %>
        <h4>レシピ追加</h4>
      <% end %>
    </div>
    <div class="col-lg-6 mt-3 mb-3 text-center">
      <p>レシピ名検索</p>
      <%= render "admin_user/searches/form", q: @q_recipe %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 mt-5 mb-3 text-center">
      <h2><strong>レシピ一覧</strong></h2>
    </div>
  </div>
  <div class="row">
    <% @recipes.each do |recipe| %>
      <div class="col-lg-4  mb-5 text-center">
        <div class="user-bg">
          <%= link_to admin_user_recipe_path(recipe.id),class: 'text-link' do %>
            <p><%= image_tag recipe.get_image(200,200),class: 'image-my-page' %></p>
            <p>レシピ名: <%= recipe.name %></p>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
