<div class="container">
  <!--タイトル＋エラーメッセージ-->
  <div class="row">
    <div class="col-lg-12 mt-3 mb-3 text-center">
      <h2><strong>レシピ編集</strong></h2>
      <%= render 'layouts/errors', obj: @recipe %>
    </div>
  </div>
  <!--編集フォーム-->
  <%= form_with model: @recipe, url: admin_user_recipe_path, method: :patch do |f| %>
    <%= render "admin_user/recipes/form", f: f %>
  <% end %>
  <!--戻るボタン-->
  <div class="row">
    <div class="col-lg-12 mt-3 mb-3 text-center">
      <%= link_to admin_user_recipes_path, class: 'text-link' do %>
        <strong><i class="fas fa-chevron-circle-left"></i>一覧ページに戻る<i class="fas fa-chevron-circle-left"></i></strong>
      <% end %>
    </div>
  </div>

</div>

