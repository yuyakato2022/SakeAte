<div class="container">
  <!--タイトル＋エラーメッセージ-->
  <div class="row">
    <div class="col-lg-12 text-center mt-5">
      <h2>お酒変更</h2>
      <%= render 'layouts/errors', obj: @alcohol %>
    </div>
  </div>
  <!--編集フォーム-->
  <div class="row">
    <div class="col-lg-12 text-center mb-3 ">
    <%= form_with model: @alcohol, url: edit_admin_user_alcohol_path, method: :patch do |f| %>
      <%= render "admin_user/alcohols/form", f: f %>
    <% end %>
    </div>
  </div>
  <!--戻るボタン-->
  <div class="row">
    <div class="col-lg-12 text-center mt-3 mb-3 ">
      <%= link_to admin_user_alcohols_path, class: 'text-link' do %>
        <strong><i class="fas fa-chevron-circle-left"></i>一覧ページに戻る<i class="fas fa-chevron-circle-left"></i></strong>
      <% end %>
    </div>
  </div>

</div>