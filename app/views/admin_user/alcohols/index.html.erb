<%= render 'layouts/errors', obj: @alcohol %>
<div class="container">
  <div class="row">
    <div class="col-lg-12 mb-5 text-center">
      <h2><strong>お酒追加</strong></h2>
      <%= form_with model: @alcohol, url: admin_user_alcohols_path, method: :post do |f| %>
        <strong><%= f.label :name, '種類' %></strong>
        <%= f.text_field :name %>
        <%= f.submit "登録" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6 text-center offset-3">
      <table class="table table-bordered">
        <thead class="thead-dark">
          <tr>
            <th><h4>お酒一覧</h4></th>
          </tr>
        </thead>
        <tbody>
          <% @alcohols.each do |alcohol| %>
            <tr class="table-light">
              <td>
                <h5><%= alcohol.name %></h5>
                <%= link_to edit_admin_user_alcohol_path(alcohol.id),class: "text-success" do %>
                  <i class="fas fa-edit"></i>編集する
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>