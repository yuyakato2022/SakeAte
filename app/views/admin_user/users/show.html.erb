<h3><%= @user.name %>様の会員情報</h3>

<%= @user.id %>
<%= @user.name %>
<%= @user.email%>

<% @reviews.each do |review| %>
  <%= review.text %>
  <%= link_to "コメント削除", public_recipe_review_path(review.recipe, review), method: :delete %>
<% end %>

<% if @user.is_deleted == true %>
  退会
<% else %>
  有効
<% end%>
<%= link_to '会員変更画面', edit_admin_user_user_path(@user) %>